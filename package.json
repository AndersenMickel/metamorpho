{
  "name": "morpho-blue-periphery",
  "version": "1.0.0",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morpho-labs/morpho-blue-periphery.git"
  },
  "license": "MIT",
  "author": {
    "name": "Morpho Labs",
    "email": "security@morpho.xyz",
    "url": "https://github.com/morpho-labs"
  },
  "bugs": {
    "url": "https://github.com/morpho-labs/morpho-blue-periphery/issues"
  },
  "homepage": "https://github.com/morpho-labs/morpho-blue-periphery#readme",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "prettier"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/types/**/*.ts"
    ],
    "transform": {
      "\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false,
          "isolatedModules": true
        }
      ]
    }
  }
}
